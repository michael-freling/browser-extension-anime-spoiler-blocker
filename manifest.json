{
  "name": "Spoiler Blocker",
  "description": "An extension to block spoilers. Currently, it blocks contents on YouTube only",
  "version": "1.0",
  "manifest_version": 3,
  "key": "",
  "action": {
    "default_popup": "assets/hello.html",
    "default_icon": "assets/icon.png"
  },
  "options_page": "assets/options.html",
  "background": {
    "service_worker": "js/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "world": "MAIN",
      "js": ["js/content_scripts/youtube.js"]
    },
    {
      "matches": ["https://www.crunchyroll.com/*"],
      "js": ["js/content_scripts/crunchyroll.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://*.youtube.com/*"]
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/configs/*.json"],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "permissions": ["storage"]
}
